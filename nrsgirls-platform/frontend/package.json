{
  "name": "nrsgirls-frontend",
  "version": "1.0.0",
  "description": "NRS Girls Platform Frontend",
  "private": true,
  "workspaces": [
    "homepage",
    "dj-portal", 
    "performer-portal",
    "shared-components"
  ],
  "scripts": {
    "dev": "concurrently \"npx yarn workspace homepage dev\" \"npx yarn workspace dj-portal dev\" \"npx yarn workspace performer-portal dev\"",
    "build": "npx yarn workspaces run build",
    "lint": "npx yarn workspaces run lint",
    "test": "npx yarn workspaces run test",
    "clean": "npx yarn workspaces run clean && rm -rf node_modules"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "@types/node": "^20.8.0",
    "typescript": "^5.2.2"
  },
  "overrides": {
    "vite": "^7.1.9",
    "esbuild": "^0.25.10"
  },
  "engines": {
    "node": ">=18.0.0",
    "yarn": ">=1.22.0"
  }
}
