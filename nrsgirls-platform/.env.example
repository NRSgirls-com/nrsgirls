# NRS Girls Platform Environment Variables

# Server Configuration
NODE_ENV=development
PORT=3001
FRONTEND_URL=http://localhost:3000

# Database Configuration
DATABASE_URL=postgresql://postgres:example@localhost:5432/nrsgirls
DB_HOST=localhost
DB_PORT=5432
DB_NAME=nrsgirls
DB_USER=postgres
DB_PASSWORD=example

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# File Storage
STORAGE_PROVIDER=s3
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-west-2
S3_BUCKET=nrsgirls-content

# CDN Configuration
CDN_URL=https://cdn.nrsgirls.com
CDN_PRIVATE_KEY=your-cdn-private-key

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=niel@nrsgirls.com
SMTP_PASS=your-app-password

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# Logging
LOG_LEVEL=info

# Content Moderation
CONTENT_MODERATION_ENABLED=true
AUTO_APPROVE_THRESHOLD=0.95

# Analytics
ANALYTICS_ENABLED=true
ANALYTICS_KEY=your-analytics-key